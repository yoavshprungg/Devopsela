pipeline {
    agent any

    environment {
        DOCKER_IMAGE_TAG = "${env.BUILD_NUMBER}" // You can customize the tag based on your needs
        DOCKER_IMAGE_NAME = "your-dockerhub-username/your-app-name" // Replace with your Docker Hub username and app name
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout your repository
                checkout scm
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                // Build and push Docker image
                script {
                    docker.build("${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}", './docker')
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials-id') {
                        docker.image("${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}").push()
                    }
                }
            }
        }
    }

    post {
        success {
            echo "Docker image built and pushed successfully"
        }
        failure {
            echo "Failed to build and push Docker image"
        }
    }
}

